citHeader("When using dbm in publications, please cite:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("dbm")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s.", meta$Version)

citEntry(entry="Manual",
         title = "dbm: Dynamic Binary Model.",
         author = personList(as.person("Alexios Ghalanos")),
         year         = year,
         note         = note,
         textVersion = 
         paste("Alexios Ghalanos",
               sprintf("(%s).", year),
               "dbm: Dynamic Binary Model.",
	       note),
	 header = "To cite the dbm package, please use:"
)

